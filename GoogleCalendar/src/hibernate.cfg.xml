<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
		<property name="hibernate.connection.url">jdbc:h2:mem:myDb</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password">sa</property>
		<property name="dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">create</property>
		<mapping class="it.unical.googlecalendar.model.User" />
		<mapping class="it.unical.googlecalendar.model.Calendar" />
		<mapping class="it.unical.googlecalendar.model.Occurrence" />
		<mapping class="it.unical.googlecalendar.model.Memo" />
		<mapping class="it.unical.googlecalendar.model.Event" />
	</session-factory>
</hibernate-configuration>
